        android:text="2-4"
        android:background="@drawable/bg_border_square" />

    <TextView
        android:text="3-1"
        android:background="@drawable/bg_border_square" />
    <TextView
        android:text="3-2"
        android:background="@drawable/bg_border_square" />
    <TextView
        android:layout_gravity="fill_horizontal"
        android:text="3-3 longer"
        android:background="@drawable/bg_border_square" />
    <TextView
        android:text="3-4"
        android:background="@drawable/bg_border_square" />

    <TextView
        android:text="4-1"
        android:background="@drawable/bg_border_square" />
    <TextView
        android:text="4-2"
        android:background="@drawable/bg_border_square" />
    <TextView
        android:layout_gravity="fill_horizontal"
        android:text="4-3"
        android:background="@drawable/bg_border_square" />
    <TextView
        android:text="4-4"
        android:background="@drawable/bg_border_square" />

</GridLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
